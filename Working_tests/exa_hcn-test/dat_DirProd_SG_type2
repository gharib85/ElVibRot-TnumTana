 &basis_nD nb_basis=2 name="direct_prod"  L_SparseBasis=$LB L_SparseGrid=$LG SparseGrid_type=2 /
    &basis_nD iQdyn(1)=2 name="Hm" Q0=3.2 scaleQ=5.1  /
    &basis_nD iQdyn(1)=3 name="Hm" Q0=2.2 scaleQ=11.0 /
